<Window
    x:Class="SAE201_Intermarche.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Intermarche.model"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="700"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
     WindowState="Maximized">
    <Window.DataContext>
        <local:ApplicationData x:Name="data"/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450*" />
            <ColumnDefinition Width="450*" />
            <ColumnDefinition Width="301*" />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Background="Gray"
            Orientation="Horizontal">
            <Image
                Width="auto"
                Height="auto"
                Margin="5,5,5,5"
                MouseDown="Image_MouseDown"
                Source="/img/logovNeg.png"
                Stretch="Fill" />
            <Ellipse
                Width="30"
                Height="30"
                Margin="20,0,0,0"
                Fill="Yellow" />
            <Label
                Margin="5,0,5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="?"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource Principalstackpanel}" >

            <Label
               Style="{StaticResource titrePrincipal}">
                Nouvelle location
            </Label>
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label Style="{StaticResource formulaireLabel}">
                        Recherche Client
                    </Label>
                    <Label Style="{StaticResource formulaireLabel}">
                        Date réservation
                    </Label>
                    <Label Style="{StaticResource formulaireLabel}">
                        Date retour
                    </Label>
                    <Label Style="{StaticResource formulaireLabel}" >
                        Type véhicule
                    </Label>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <ComboBox x:Name="cbRechercheClientLocation"
                                ItemsSource="{Binding ClientEtIdComboBoxItems}"
                                Text="" SelectionChanged="ComboBox_SelectionChanged"
                              Style="{StaticResource formulaireCombobox}"
                    />
                    <DatePicker Style="{StaticResource formulaireDate}"></DatePicker>
                    <DatePicker Style="{StaticResource formulaireDate}"></DatePicker>
                    <ComboBox Style="{StaticResource formulaireCombobox}" ItemsSource="{Binding ListeTypeVehicule}"></ComboBox>

                    <Button
                x:Name="resa"
               Style="{StaticResource PrincipalBouton}"
                Click="resa_Click"
                Content="Continuer la réservation" />
                </StackPanel>
            </Grid>

        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource Principalstackpanel}">
            <Label
               Style="{StaticResource titrePrincipal}">
                Ajouter un client
            </Label>
            <Grid Margin="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label Style="{StaticResource formulaireLabel}" >Nom</Label>
                    <Label Style="{StaticResource formulaireLabel}">Prénom</Label>
                    <Label  Style="{StaticResource formulaireLabel}" >Date de naissance</Label>
                    <Label Style="{StaticResource formulaireLabel}">Email</Label>
                    <Label Style="{StaticResource formulaireLabel}" >Téléphone</Label>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBox Style="{StaticResource formulaireTextbox}" Text=" Nom"/>
                    <TextBox Style="{StaticResource formulaireTextbox}" Text=" Prénom" />
                    <DatePicker Style="{StaticResource formulaireDate}"></DatePicker>
                    <TextBox Style="{StaticResource formulaireTextbox}" Text=" Téléphone"/>
                    <TextBox Style="{StaticResource formulaireTextbox}" Text=" Email" />
                    <Button
                        x:Name="retourWin"
                        Style="{StaticResource PrincipalBouton}"
                        Click="retourWin_Click"
                        Content="Ajouter un client" />
                </StackPanel>
            </Grid>

        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="2"
            Style="{StaticResource Principalstackpanel}">
            <Label
               Style="{StaticResource titrePrincipal}">
                Rechercher un client
            </Label>
            <Label Style="{StaticResource filtreLabel}" >Nom et prénom</Label>
            <ComboBox x:Name="cbRechercheClient" Style="{StaticResource formulaireCombobox}" Text="" 
                      ItemsSource="{Binding ClientComboBoxItems}" SelectionChanged="cbRechercheClient_SelectionChanged"
                      />
            <Label Style="{StaticResource filtreLabel}" >Numéro client</Label>
            <TextBox x:Name="tbNumClient" Style="{StaticResource formulaireTextbox}" TextChanged="tbNumClient_TextChanged"/>
            <Label Style="{StaticResource filtreLabel}" >Date de naissance</Label>
            <DatePicker Style="{StaticResource formulaireDate}"></DatePicker>

            <Button x:Name="butRechercherClient"
            Style="{StaticResource PrincipalBouton}"
            Content="Rechercher le client" Click="butRechercherClient_Click" />
        </StackPanel>
        <StackPanel  Grid.Row="2"
 Grid.Column="2"
 Style="{StaticResource Principalstackpanel}">
            <Label
               Style="{StaticResource titrePrincipal}">
                Rechercher une location
            </Label>
            <Label
                Style="{StaticResource filtreLabel}">
                Type véhicule
            </Label>
            <ComboBox Style="{StaticResource formulaireCombobox}" 
                      ItemsSource="{Binding ListeTypeVehicule}"
                      />
            <Label
                Style="{StaticResource filtreLabel}">
                Date emprunt
            </Label>
            <DatePicker Style="{StaticResource formulaireDate}"/>
            <Label
                Style="{StaticResource filtreLabel}">
                Date retour
            </Label>
            <DatePicker Style="{StaticResource formulaireDate}" />
            <Button
             x:Name="location"
             Style="{StaticResource PrincipalBouton}"
            Click="resume_Click"
             Content="Rechercher la location" />


        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Orientation="Horizontal"
            Style="{StaticResource Principalstackpanel}">
            <Grid Width="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label Style="{StaticResource titrePrincipal}" Content="Planning des réservations"/>
                    <Calendar x:Name="calPlanningReservation" VerticalAlignment="Center" Margin="20,50,20,20" MouseDown="calPlanningReservation_MouseDown"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <DataGrid
       x:Name="dgData"
       Margin="20" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Véhicule" />
                            <DataGridTextColumn Header="TypeBoite" />
                            <DataGridTextColumn Header="Forfait" />
                            <DataGridTextColumn Header="Assurance" />
                            <DataGridTextColumn Header="Nom" />
                            <DataGridTextColumn Header="Prenom" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>


</Window>
