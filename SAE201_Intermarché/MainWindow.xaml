<Window
    x:Class="SAE201_Intermarche.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Intermarché"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="700"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Background="Gray"
            Orientation="Horizontal">
            <Image
                Width="auto"
                Height="auto"
                Margin="5,5,5,5"
                MouseDown="Image_MouseDown"
                Source="/img/logo.png"
                Stretch="Fill" />
            <Ellipse
                Width="30"
                Height="30"
                Margin="20,0,0,0"
                Fill="Yellow" />
            <Label
                Margin="5,0,5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="?"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource Principalstackpanel}">

            <Label
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                Background="Orange">
                Enregistrer une location
            </Label>
            <StackPanel Margin="20,10,20,20" Orientation="Horizontal">
                <Label
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Left"
                    Background="Green">
                    Recherche Client
                </Label>
                <ComboBox
                    Width="151"
                    Text=""
                     />
                <Button Width="40" Content="Ok" />
                <Button
                    x:Name="clientWi"
                    Width="95"
                    Margin="10,0,0,0"
                    Click="clientWin_Click"
                    Content="Ajouter un client" />
            </StackPanel>
            <StackPanel Margin="20,0,20,20" Orientation="Horizontal">
                <Label
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Left"
                    Background="Green">
                    Date emprunt
                </Label>
                <DatePicker Width="150" />
            </StackPanel>
            <StackPanel Margin="10,10,20,20" Orientation="Horizontal">
                <Label
                    Width="100"
                    Height="30"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Background="Green">
                    Date retour
                </Label>
                <DatePicker Width="150" />
            </StackPanel>
            <StackPanel Margin="20,0,20,0" Orientation="Horizontal">
                <Label
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Left"
                    Background="Green">
                    Type véhicule
                </Label>
                <ComboBox Width="300" Text="" />
            </StackPanel>
            <Button
                x:Name="resa"
                Width="150"
                Height="30"
                Margin="20"
                HorizontalAlignment="Right"
                Background="Red"
                Click="resa_Click"
                Content="Continuer la réservation" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource Principalstackpanel}">
            <Label
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                Background="Orange">
                Ajouter un client
            </Label>
            <StackPanel  Margin="20,20,20,0" Orientation="Horizontal">
                <TextBox TextWrapping="Wrap" Width="200" Height="30" Text=" Nom" HorizontalAlignment="Right" Margin="0,0,10,0" />
                <TextBox TextWrapping="Wrap" Width="200" Height="30" Text=" Prénom" HorizontalAlignment="Right" Margin="0,0,10,0" />
            </StackPanel>
            <DatePicker Margin="20,10,20,0" Text="Date de naissance"></DatePicker>
            <StackPanel  Margin="20,0,20,0" Orientation="Horizontal">
                <TextBox TextWrapping="Wrap" Width="200" Height="30" Text=" Téléphone" HorizontalAlignment="Right" Margin="0,5,10,0"/>
                <TextBox TextWrapping="Wrap" Width="200" Height="30" Text=" Email" HorizontalAlignment="Right" Margin="0,5,10,0"/>
            </StackPanel>
            
            <TextBox TextWrapping="Wrap" Width="310" Height="30" Text=" Adresse" HorizontalAlignment="Center" Margin="0,10,20,0" />
            <StackPanel Orientation="Horizontal" Margin="0,10,20,0" HorizontalAlignment="Center" >
                <TextBox TextWrapping="Wrap" Width="100" Height="30" Text=" Code postal"  Margin="0,0,10,0"/>
                <TextBox TextWrapping="Wrap" Width="200" Height="30" Text=" Ville" Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Margin="20,0,20,0" Orientation="Horizontal"/>
            <Button
                x:Name="retourWin"
                Width="150"
                Height="30"
                Margin="20"
                HorizontalAlignment="Right"
                Background="Red"
                Click="retourWin_Click"
                Content="Ajouter un client" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="2"
            Style="{StaticResource Principalstackpanel}">
            <Label
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                Background="Orange">
                Rechercher une location
            </Label>
            <Label
                Margin="10,10,10,5"
                Padding="3"
                FontSize="15">
                Type véhicule
            </Label>
            <ComboBox Margin="10,0,10,0" />
            <Label
                Margin="10,10,10,5"
                Padding="3"
                FontSize="15">
                Date emprunt
            </Label>
            <DatePicker Margin="10,0,10,0" />
            <Label
                Margin="10,10,10,5"
                Padding="3"
                FontSize="15">
                Date retour
            </Label>
            <DatePicker Margin="10,0,10,0" />
            <Button
                Width="50"
                Height="30"
                Margin="10,20,10,5"
                HorizontalAlignment="Right">
                ok
            </Button>
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Orientation="Horizontal"
            Style="{StaticResource Principalstackpanel}">
            <Label
                Width="150"
                Height="30"
                VerticalAlignment="Top"
                Background="Orange" Content="Planning des réservations"/>
            <Calendar VerticalAlignment="Center" />
            <DataGrid
                x:Name="data"
                Width="auto"
                Margin="20,0,0,0"
                VerticalAlignment="Center">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Véhicule" />
                    <DataGridTextColumn Header="TypeBoite" />
                    <DataGridTextColumn Header="Forfait" />
                    <DataGridTextColumn Header="Assurance" />
                    <DataGridTextColumn Header="Nom" />
                    <DataGridTextColumn Header="Prenom" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

    </Grid>
</Window>
