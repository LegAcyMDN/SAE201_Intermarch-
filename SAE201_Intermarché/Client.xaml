<Window x:Class="SAE201_Intermarche.Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE201_Intermarché"
        mc:Ignorable="d"
        Title="Client" ResizeMode="CanResize" WindowStartupLocation="CenterScreen"  Width="1200" Height="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="hautPage" Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="3" Background="Gray">
            <Image Height="auto" Source="/img/logo.png" Stretch="Fill" Width="auto" Margin="5,5,5,5" MouseDown="Image_MouseDown"/>
            <Ellipse Height="30" Width="30" Fill="Yellow" Margin="20,0,0,0"/>
            <Label Content="?" FontSize="20" Margin="5,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Principalstackpanel}">
            <Label Width="80" Height="30" HorizontalAlignment="Left" Background="Orange" >Identité</Label>
            <StackPanel Orientation="Vertical" Margin="20,20,20,0">
                <StackPanel Orientation="Horizontal" Margin="20,0,20,20" HorizontalAlignment="Left">
                    <Image Height="70" Width="70" Source="/img/icone.jpg" HorizontalAlignment="Left"></Image>
                    <Label Height="30" Margin="20,0,0,0" >Date création</Label>
                    <Label Background="White" Margin="20,0,0,0" Height="30" Content="Date création"/>
                </StackPanel>
               
                <StackPanel Orientation="Horizontal" Margin="0" HorizontalAlignment="Center">
                    <Label Margin="0,0,150,0">Nom</Label>
                    <Label>Prénom</Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="20,0,20,20" HorizontalAlignment="Center">
                    <TextBox TextWrapping="Wrap" Width="150" Margin="0,0,20,0" Height="30" Text=" Nom" HorizontalAlignment="Right" />
                    <TextBox TextWrapping="Wrap" Width="150" Height="30" Text=" Prénom" HorizontalAlignment="Right" />
                </StackPanel>
                <Label Margin="40,0,0,0">Date de naissance</Label>
                <DatePicker Margin="40,0,40,20" Text="Date de naissance"></DatePicker>
                <StackPanel Orientation="Horizontal" Margin="0" HorizontalAlignment="Center">
                    <Label Margin="0,0,120,0">Téléphone</Label>
                    <Label>Email</Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="20,0,20,20" HorizontalAlignment="Center">
                    <TextBox TextWrapping="Wrap" Width="150" Height="30" Text=" Téléphone" HorizontalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBox TextWrapping="Wrap" Width="150" Height="30" Text=" Email" HorizontalAlignment="Center" Margin="0,0,0,0"/>
                </StackPanel>
                <Label Margin="40,0,0,0">Adresse</Label>
                <TextBox TextWrapping="Wrap" Width="310" Height="30" Text=" Adresse" HorizontalAlignment="Center" Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                <Label Margin="0,0,80,0" Width="87">Code postal</Label>
                <Label Width="143">Ville</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20,0,20,20" HorizontalAlignment="Center">
                <TextBox TextWrapping="Wrap" Width="100" Height="30" Text=" Code postal"  Margin="0,0,10,0"/>
                <TextBox TextWrapping="Wrap" Width="200" Height="30" Text=" Ville" Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20,0,20,20" HorizontalAlignment="Center">
                <RadioButton Content="Particulier"/>
                <RadioButton Content="Entreprise"
                     Margin="100,0,0,0"/>
            </StackPanel>

           
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Style="{StaticResource Principalstackpanel}">
            <Label Width="150" Height="30" HorizontalAlignment="Left" Background="Orange" >Pièces jointes</Label>
            <StackPanel Margin="10,10,10,10">
                <StackPanel Orientation="Horizontal">
                    <Label Width="200" Height="30" HorizontalAlignment="Left" Background="Green" >Permis</Label>
                    <Button Height="20" Width="20" Margin="-50,10,10,10">+</Button>
                    <Ellipse Height="10" Width="10" Fill="Red" Margin="-15,10,10,10"></Ellipse>
                    <TextBox TextWrapping="Wrap" Text="nomdufichier" Width="200" Height="20"/>
                    <Button Height="20" Width="40" Margin="-40,10,10,10">ouvrir</Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Width="200" Height="30" HorizontalAlignment="Left" Background="Green" >Pièce identité</Label>
                    <Button Height="20" Width="20" Margin="-50,10,10,10">+</Button>
                    <Ellipse Height="10" Width="10" Fill="Red" Margin="-15,10,10,10"></Ellipse>
                    <TextBox TextWrapping="Wrap" Text="nomdufichier" Width="200" Height="20"/>
                    <Button Height="20" Width="40" Margin="-40,10,10,10">ouvrir</Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Width="200" Height="30" HorizontalAlignment="Left" Background="Green" >Assurance</Label>
                    <Button Height="20" Width="20" Margin="-50,10,10,10">+</Button>
                    <Ellipse Height="10" Width="10" Fill="Red" Margin="-15,10,10,10"></Ellipse>
                    <TextBox TextWrapping="Wrap" Text="nomdufichier" Width="200" Height="20"/>
                    <Button Height="20" Width="40" Margin="-40,10,10,10">ouvrir</Button>
                </StackPanel>

            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2" Style="{StaticResource Principalstackpanel}" Margin="20,20,20,25">
            <Button Height="30" Background="red">Enregistrer le client</Button>
            <Rectangle Height="20" Fill="White" ></Rectangle>
            <Label Width="100" Height="30" HorizontalAlignment="Left" Background="Orange">Rechercher</Label>
            <Label FontSize="15" Padding="3" Margin="10,10,10,5">Type véhicule</Label>
            <ComboBox Margin="10,0,10,0"></ComboBox>
            <Label Margin="10,10,10,5" FontSize="15" Padding="3">Date emprunt</Label>
            <DatePicker Margin="10,0,10,0"></DatePicker>
            <Label Margin="10,10,10,5" FontSize="15" Padding="3">Date retour</Label>
            <DatePicker Margin="10,0,10,0"></DatePicker>

        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Principalstackpanel}">
            <Label Width="160" Height="30" HorizontalAlignment="Left" Background="Orange" >Historique des réservations</Label>
            <StackPanel Background="Green" Height="30" Orientation="Horizontal">
                <Label Margin="0,0,40,0">Numéro de réservation</Label>
                <Label  Margin="0,0,40,0">Immatriculation</Label>
                <Label  Margin="0,0,40,0">Date de début</Label>
                <Label  Margin="0,0,40,0">Date de fin</Label>
                <Label  Margin="0,0,40,0" Content="prix"/>
            </StackPanel>
            <Rectangle Height="30" Fill="Gray"></Rectangle>
            <Rectangle Height="30" Fill="DarkGray"></Rectangle>
            <Rectangle Height="30" Fill="Gray"></Rectangle>
            <Rectangle Height="30" Fill="DarkGray"></Rectangle>
            <Rectangle Height="30" Fill="Gray"></Rectangle>
            <Rectangle Height="30" Fill="DarkGray"></Rectangle>
            <Rectangle Height="30" Fill="Gray"></Rectangle>
            <Rectangle Height="30" Fill="DarkGray"></Rectangle>
            <Rectangle Height="30" Fill="Gray"></Rectangle>
            <Rectangle Height="30" Fill="DarkGray"></Rectangle>
            <Rectangle Height="30" Fill="Gray"></Rectangle>
        </StackPanel>

    </Grid>
</Window>
