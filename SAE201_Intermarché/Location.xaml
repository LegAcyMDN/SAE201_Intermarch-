<Window
    x:Class="SAE201_Intermarche.Location"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Intermarché"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Location"
    Width="1200"
    Height="700"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="106*" />
            <RowDefinition Height="121*" />
            <RowDefinition Height="518*" />
            <RowDefinition Height="319*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            x:Name="hautPage"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Background="Gray"
            Orientation="Horizontal">
            <Image
                Width="auto"
                Height="auto"
                Margin="5,5,5,5"
                Source="/img/logo.png"
                Stretch="Fill" />
            <Ellipse
                Width="30"
                Height="30"
                Margin="20,0,0,0"
                Fill="Yellow" />
            <Label
                Margin="5,0,5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="?"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="20,20,20,9"
            Style="{StaticResource Principalstackpanel}">
            <StackPanel Margin="10" Orientation="Horizontal">
                <Label
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Left"
                    Background="Green">
                    Recherche Client
                </Label>
                <TextBox
                    Width="200"
                    Height="30"
                    Text=""
                    TextWrapping="Wrap" />
                <Button Width="40" Content="Ok" />
                <Button
                    x:Name="clientWin"
                    Width="150"
                    Margin="10,0,0,0"
                    Content="Ajouter un client" />
            </StackPanel>
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="2"
            Margin="20,20,20,20"
            Style="{StaticResource Principalstackpanel}">
            <Label
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                Background="Orange">
                Résumé de la location
            </Label>
            <StackPanel Orientation="Vertical" Margin="20,10,20,0">

                <StackPanel Style="{StaticResource Formulairestackpanel}" HorizontalAlignment="Center" >
                    <Label Margin="0,0,150,0">Nom</Label>
                    <Label>Prénom</Label>
                </StackPanel>
                <StackPanel Style="{StaticResource Formulairestackpanel}" HorizontalAlignment="Center">
                    <TextBox TextWrapping="Wrap" Width="150" Margin="0,0,20,0" Height="30" Text=" Nom" HorizontalAlignment="Right" />
                    <TextBox TextWrapping="Wrap" Width="150" Height="30" Text=" Prénom" HorizontalAlignment="Right" />
                </StackPanel>
                <Label Margin="40,0,0,0">Date de naissance</Label>
                <DatePicker Margin="40,0,40,5" Text="Date de naissance"></DatePicker>
                <StackPanel Style="{StaticResource Formulairestackpanel}" HorizontalAlignment="Center">
                    <Label Margin="0,0,120,0">Téléphone</Label>
                    <Label>Email</Label>
                </StackPanel>
                <StackPanel Style="{StaticResource Formulairestackpanel}" HorizontalAlignment="Center">
                    <TextBox TextWrapping="Wrap" Width="150" Height="30" Text=" Téléphone" HorizontalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBox TextWrapping="Wrap" Width="150" Height="30" Text=" Email" HorizontalAlignment="Center" Margin="0,0,0,0"/>
                </StackPanel>
                <Label Margin="20,0,0,0">Adresse</Label>
                <TextBox TextWrapping="Wrap" Width="310" Height="30" Text=" Adresse" HorizontalAlignment="Center" Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Style="{StaticResource Formulairestackpanel}"  HorizontalAlignment="Center">
                <Label Margin="0,0,80,0" Width="87">Code postal</Label>
                <Label Width="143">Ville</Label>
            </StackPanel>
            <StackPanel Style="{StaticResource Formulairestackpanel}" HorizontalAlignment="Center">
                <TextBox TextWrapping="Wrap" Width="100" Height="30" Text=" Code postal"  Margin="0,0,10,0"/>
                <TextBox TextWrapping="Wrap" Width="200" Height="30" Text=" Ville" Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Style="{StaticResource Formulairestackpanel}" Margin="0,10,0,0" HorizontalAlignment="Center">
                <RadioButton Content="Particulier"/>
                <RadioButton Content="Entreprise"
                Margin="100,0,0,0"/>
            </StackPanel>
            <StackPanel Style="{StaticResource Formulairestackpanel}" HorizontalAlignment="Center">
                <Label Margin="0,0,80,0">Date emprunt</Label>
                <Label>Date retour</Label>
            </StackPanel>
            <StackPanel Style="{StaticResource Formulairestackpanel}" HorizontalAlignment="Center">
                <DatePicker Margin="0,5,0,0" Text=""></DatePicker>
                <DatePicker Margin="0,5,0,0" Text=""></DatePicker>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="20,5,20,0">
               
                <ListBox Height="30"  Margin="0,5,0,0">Liste des véhicules choisis</ListBox>
                <TextBox TextWrapping="Wrap" Width="200" Height="30" Text="Prix" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="-50,5,0,20" >
                  <Button Content="Confirmer la location" Width="150" Height="30"  Background="Red" Margin="0,0,0,0" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="20,20,20,20"
            Style="{StaticResource Principalstackpanel}">
            <Label
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                Background="Orange">
                Liste véhicules
            </Label>
            <StackPanel Orientation="Horizontal">
                <StackPanel Width="370" Orientation="Vertical">
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                </StackPanel>
                <StackPanel
                    Width="80"
                    Background="Orange"
                    Orientation="Vertical">
                    <Ellipse
                        Width="20"
                        Height="20"
                        Margin="5"
                        Fill="Green" />
                    <Ellipse
                        Width="20"
                        Height="20"
                        Margin="5"
                        Fill="DarkOrange" />
                    <Ellipse
                        Width="20"
                        Height="20"
                        Margin="5"
                        Fill="Red" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.RowSpan="1"
            Margin="20,20,20,20"
            Style="{StaticResource Principalstackpanel}">
            <Label
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                Background="Orange">
                Filtre
            </Label>
            <Label
                Margin="10,10,10,5"
                Padding="3"
                FontSize="15">
                Type véhicule
            </Label>
            <ComboBox Margin="10,0,10,0" />
            <Label
                Margin="10,10,10,5"
                Padding="3"
                FontSize="15">
                Date emprunt
            </Label>
            <DatePicker Margin="10,0,10,0" />
            <Label
                Margin="10,10,10,5"
                Padding="3"
                FontSize="15">
                Date retour
            </Label>
            <DatePicker Margin="10,0,10,0" />
            <Button
                Width="50"
                Height="30"
                Margin="10,20,10,5"
                HorizontalAlignment="Right">
                ok
            </Button>
        </StackPanel>

    </Grid>
</Window>
