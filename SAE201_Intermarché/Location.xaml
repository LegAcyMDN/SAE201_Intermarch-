<Window
    x:Class="SAE201_Intermarche.Location"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Intermarché"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Location"
    Width="1200"
    Height="700"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="106*" />
            <RowDefinition Height="121*" />
            <RowDefinition Height="518*" />
            <RowDefinition Height="319*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            x:Name="hautPage"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Background="Gray"
            Orientation="Horizontal">
            <Image
                Width="auto"
                Height="auto"
                Margin="5,5,5,5"
                Source="/img/logo.png"
                Stretch="Fill" />
            <Ellipse
                Width="30"
                Height="30"
                Margin="20,0,0,0"
                Fill="Yellow" />
            <Label
                Margin="5,0,5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="?"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="20,20,20,9"
            Style="{StaticResource Principalstackpanel}">
            <StackPanel Margin="10" Orientation="Horizontal">
                <Label
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Left"
                    Background="Green">
                    Recherche Client
                </Label>
                <TextBox
                    Width="200"
                    Height="30"
                    Text=""
                    TextWrapping="Wrap" />
                <Button Width="40" Content="Ok" />
                <Button
                    x:Name="clientWin"
                    Width="150"
                    Margin="10,0,0,0"
                    Content="Ajouter un client" />
            </StackPanel>
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="2"
            Margin="20,20,20,20"
            Style="{StaticResource Principalstackpanel}">
            <Label
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                Background="Orange">
                Résumé de la location
            </Label>
            <StackPanel Margin="20,20,20,0" Orientation="Vertical">
                <Image
                    Width="150"
                    Height="150"
                    HorizontalAlignment="Left"
                    Source="/img/icone.jpg" />
                <TextBox
                    Width="200"
                    Height="30"
                    Margin="0,-250,0,0"
                    HorizontalAlignment="Right"
                    Text=" Nom"
                    TextWrapping="Wrap" />
                <TextBox
                    Width="200"
                    Height="30"
                    Margin="0,-180,0,0"
                    HorizontalAlignment="Right"
                    Text=" Prénom"
                    TextWrapping="Wrap" />
                <DatePicker
                    Width="200"
                    Margin="0,-70,0,0"
                    HorizontalAlignment="Right"
                    Text="Date de naissance" />
                <TextBox
                    Width="200"
                    Height="30"
                    Margin="0,-60,0,0"
                    HorizontalAlignment="Right"
                    Text=" Téléphone"
                    TextWrapping="Wrap" />
                <TextBox
                    Width="200"
                    Height="30"
                    Margin="0,-10,0,0"
                    HorizontalAlignment="Right"
                    Text=" Email"
                    TextWrapping="Wrap" />
                <TextBox
                    Width="310"
                    Height="30"
                    Margin="0,5,0,10"
                    HorizontalAlignment="Right"
                    Text=" Adresse"
                    TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel
                Margin="20,0,20,20"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBox
                    Width="100"
                    Height="30"
                    Margin="0,-5,10,0"
                    Text=" Code postal"
                    TextWrapping="Wrap" />
                <TextBox
                    Width="200"
                    Height="30"
                    Margin="0,-5,0,0"
                    Text=" Ville"
                    TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel Margin="20,-25,20,0" Orientation="Vertical">
                <TextBox
                    Width="200"
                    Height="30"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Left"
                    Text="Modèle choisi"
                    TextWrapping="Wrap" />
                <TextBox
                    Width="200"
                    Height="30"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    Text="Plaque immatriculation"
                    TextWrapping="Wrap" />
                <DatePicker Margin="0,5,0,0" Text="" />
                <DatePicker Margin="0,5,0,0" Text="" />
                <TextBox
                    Width="200"
                    Height="30"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    Text="Type véhicule"
                    TextWrapping="Wrap" />
                <TextBox
                    Width="200"
                    Height="30"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Left"
                    Text="Prix"
                    TextWrapping="Wrap" />
                <StackPanel
                    Margin="-50,5,0,20"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Width="150"
                        Height="30"
                        Margin="0,0,20,0"
                        Background="Red"
                        Content="Enregistrer la location" />
                    <Button
                        Width="150"
                        Height="30"
                        Margin="0,0,0,0"
                        Background="Red"
                        Content="Confirmer la location" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="20,20,20,20"
            Style="{StaticResource Principalstackpanel}">
            <Label
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                Background="Orange">
                Liste véhicules
            </Label>
            <StackPanel Orientation="Horizontal">
                <StackPanel Width="370" Orientation="Vertical">
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                    <Label Height="30" Background="Gray" />
                    <Label Height="30" Background="DarkGray" />
                </StackPanel>
                <StackPanel
                    Width="80"
                    Background="Orange"
                    Orientation="Vertical">
                    <Ellipse
                        Width="20"
                        Height="20"
                        Margin="5"
                        Fill="Green" />
                    <Ellipse
                        Width="20"
                        Height="20"
                        Margin="5"
                        Fill="DarkOrange" />
                    <Ellipse
                        Width="20"
                        Height="20"
                        Margin="5"
                        Fill="Red" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.RowSpan="1"
            Margin="20,20,20,20"
            Style="{StaticResource Principalstackpanel}">
            <Label
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                Background="Orange">
                Filtre
            </Label>
            <Label
                Margin="10,10,10,5"
                Padding="3"
                FontSize="15">
                Type véhicule
            </Label>
            <ComboBox Margin="10,0,10,0" />
            <Label
                Margin="10,10,10,5"
                Padding="3"
                FontSize="15">
                Date emprunt
            </Label>
            <DatePicker Margin="10,0,10,0" />
            <Label
                Margin="10,10,10,5"
                Padding="3"
                FontSize="15">
                Date retour
            </Label>
            <DatePicker Margin="10,0,10,0" />
            <Button
                Width="50"
                Height="30"
                Margin="10,20,10,5"
                HorizontalAlignment="Right">
                ok
            </Button>
        </StackPanel>

    </Grid>
</Window>
